<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year %>
</p>

<p>
  <strong>Authors:</strong>
  <%= pluralize(@paper.authors.count, 'Author') %>
  <ul>
    <% @paper.authors.each do |author| %>
      <li><%= link_to author.name, author_path(author) %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %> |
<%= link_to 'Delete', paper_path(@paper),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
